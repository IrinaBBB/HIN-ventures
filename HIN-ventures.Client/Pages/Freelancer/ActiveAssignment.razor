    <h4 class="text-secondary"> @AssignmentDto.Title</h4>
    @*@if (!AssignmentDto.IsActive) //check if it is already taken by other freelancers
        {*@
    @AssignmentDto.Description<br />
    Price @AssignmentDto.Price.ToString("c")<br />
