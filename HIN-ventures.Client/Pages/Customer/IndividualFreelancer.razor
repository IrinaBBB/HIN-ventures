<input type="text" @bind="@_rating" />

<button @onclick="ChangeMessage">Give a rating!</button>


@code {

    private string _rating;

    [Parameter]
    public string Message {get; set;}

    [Parameter]
    public EventCallback<string> OnClickCallback {get; set;}

    [Parameter]
    public FreelancerDto Freelancer { get; set; }


    private async Task ChangeMessage()
    {

        await OnClickCallback.InvokeAsync(_rating + $"{Freelancer.FreelancerId}");
    }
}